{
  "name": "root",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "start": "turbo run start",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "dev:api": "turbo run dev --filter=api",
    "dev:front": "turbo run dev --filter=frontend",
    "build:api": "turbo run build --filter=api",
    "build:front": "turbo run build --filter=frontend",
    "start:api": "turbo run start --filter=api",
    "start:front": "turbo run start --filter=frontend"
  },
  "devDependencies": {
    "@finejob/types": "*",
    "concurrently": "6.3.0",
    "turbo": "1.4.6"
  },
  "engines": {
    "node": "18.x"
  }
}
